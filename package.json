{
  "name": "mobileworship",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@mobileworship/web",
    "dev:client": "turbo dev --filter=@mobileworship/client",
    "dev:host": "turbo dev --filter=@mobileworship/host",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "db:migrate": "supabase db push",
    "db:types": "supabase gen types typescript --linked > packages/shared/src/types/database.ts",
    "deploy": "turbo build && cd apps/web && npx wrangler pages deploy dist --project-name=mobileworship",
    "deploy:preview": "turbo build && cd apps/web && npx wrangler pages deploy dist --project-name=mobileworship --branch=preview"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.0",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
